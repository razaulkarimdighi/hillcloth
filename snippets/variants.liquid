<div class="product_variants">
    {% unless product.has_only_default_variant %}
        <div class="product_options">
        {% for option in product.options_with_values %}
        <strong>{{ option.name }}</strong>
        <br>
        {% if variant_type == "pills" %}
        {% for value in option.values %}

        <label class="variant-pill">
            <input type="radio" id="{{ value.name |  downcase | replace:' ','_'}}"
                name="{{ option.name | downcase | replace:' ','_'}}" value="{{ value | downcase | replace:' ','_' }}" {% if option.selected_value %}checked{% endif %}>
            <span class="variant-button">{{ value.name }}</span>
        </label>
        {% endfor %}
        {% else %}
        <div class="variant-selector">
            <select class="variant_select w-50 form-control">
                {% for value in option.values %}
                    <option value="{{ value .name }}" {% if option.selected_value %}selected{% endif %}>
                        {{ value.name }}
                    </option>
                {% endfor %}
            </select>


        </div>

        {% endif %}

        <br>
        {% endfor %}
    </div>
    <select name="id" class="variants">
        {% for variant in product.variants %}
        <option value="{{ variant.id }}">
            {{ variant.title }}
        </option>
        {% endfor %}
    </select>
    {% endunless %}
</div>