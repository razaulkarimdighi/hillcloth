{% style %}
    .banner-content{
        max-width: {{ section.settings.content_width }}%;
    }
{% endstyle %}
<div class="image-banner-{{section.id}}">
  <div class="image-banner-main">
    {% if section.settings.image != blank %}
        {% comment %} <img src="{{ section.settings.image |  image_url: width:1440}}"> {% endcomment %}
         {{ section.settings.image |  image_url: width:1440 |  image_tag : widths: '375,550,750,1100,1500'  }}
    {% else %}
      {{ 'hero-apparel-1' |  placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="container">
        <div class="banner-content" style="
    --bg-color: {{ section.settings.bg_color }};
  ">
            <h1> {{ section.settings.heading }}</h1>
            {% if section.settings.sub_heading != blank %}
               <p>{{ section.settings.sub_heading }}</p> 
            {% endif %}
            <div class="banner-cta">
                <div class="cta-action">
                    <a href="{{ section.settings.url_1 }}" class="btn btn-primary">
                        {{ section.settings.label_1 }}
                    </a>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Banner Content"
      },
      {
        "type": "range",
        "id":"content_width",
        "label":"Content Width",
        "min": 50,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default":60
      },
      {
        "type": "text",
        "id":"heading",
        "label": "Heading",
        "default": "Our Best Collection"
      },
      {
        "type": "richtext",
        "id":"sub_heading",
        "label": "Sub Heading"
     
      },
      {
        "type": "text",
        "id":"label_1",
        "label": "Button Label",
        "default": "Buy Now"
     
      },
      {
        "type": "url",
        "id":"url_1",
        "label": "Button Link"
     
      }
    ],
    "presets": [
      {
        "name": "Image Banner",
        "category": "Image"
      }
    ]
  }
{% endschema %}